<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_alignParentLeft="true">


    <include
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        layout="@layout/content_input_fragment"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:id="@+id/input_content"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_content"
        android:layout_marginTop="@dimen/horizontal_margin">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:weightSum="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_credit"
                android:id="@+id/textView8"
                android:textColor="@color/dark_grey"/>
            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/creditSeekBar"
                android:progress="9"
                android:max="19" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10"
                android:gravity="end"
                android:id="@+id/creditTxt"
                android:textColor="@color/dark_grey" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:weightSum="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_answer_count"
                android:id="@+id/textView10"
                android:textColor="@color/dark_grey"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/answerSeekBar"
                android:progress="2"
                android:max="9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/answersTxt"
                android:textColor="@color/dark_grey"
                android:gravity="end"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:weightSum="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_time"
                android:id="@+id/textView12"
                android:layout_gravity="top"
                android:textColor="@color/dark_grey" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/timeSeekBar"
                android:max="53"
                android:progress="17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3:00"
                android:id="@+id/timeTxt"
                android:gravity="end"
                android:textColor="@color/dark_grey" />

        </TableRow>
    </TableLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/footer_submit_fragment"
        android:id="@+id/footer_layout"/>

</RelativeLayout>

